doctype html
html
    head
        style.
            body {
                font-family: 'Arial', sans-serif;
                color: #333;
                text-align: center;
                background-color: #d3d3d3; /* Light gray background */
            }

            .container {
                max-width: 600px;
                margin: 0 auto;
                padding: 20px;
                background-color: #ffffff; /* White background for content */
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add shadow for depth */
            }

            .header {
                background-color: #FF3B30;
                color: white;
                padding: 10px;
            }

            .steps {
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 20px;
                background-color: #ffffff; /* White background for steps */
            }

            .step {
                text-align: center;
                flex: 1;
                margin: 10px;
            }

            .step img {
                height: 50px;
                width: 50px;
                border-radius: 50%;
            }

            .step .thin-border {
                border: 1px solid #4CAF50; /* Thin border */
                padding: 5px;
            }

            .step .thick-border {
                border: 4px solid #FF3B30; /* Thick border */
                padding: 3px;
            }

            .step .transparent-border {
                border: 1px solid transparent; /* Transparent border */
                padding: 5px;
            }

            .step .transparent-icon {
                opacity: 0.5; /* Make icon transparent */
            }

            .main-content {
                background-color: #ffffff; /* White background for main content */
                padding: 20px;
                margin: 20px 0;
            }

            .btn {
                background-color: #007BFF;
                color: white;
                padding: 10px 20px;
                text-decoration: none;
                border-radius: 5px;
                display: inline-block;
                margin-top: 20px;
            }

            .footer {
                font-size: 12px;
                color: #666;
                margin-top: 20px;
            }

            .social-icons li {
                display: inline;
                margin: 0 5px;
            }

            a {
                color: #007BFF;
            }

    body
        .container
            .header
                h1 Activate your Account
            .steps
                .step
                    img.thin-border(src=doneIconUrl alt="Create Account")
                    div Create Account
                .step
                    img.thick-border(src=verifyIconUrl alt="Verify Email")
                    div Verify Email
                .step
                    img.transparent-border.transparent-icon(src=doneIconUrl alt="Enjoy Service")
                    div Enjoy Service
            .main-content
                p Thank you for registering with us. In order to activate your account, please click the button below.
                a.btn(href=activationLink) ACTIVATE ACCOUNT
